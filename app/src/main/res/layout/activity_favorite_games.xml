<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="משחקים מועדפים"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <EditText
        android:id="@+id/game_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן שם משחק"
        android:layout_marginBottom="@dimen/margin_small"/>

    <Button
        android:id="@+id/add_game_button"
        style="@style/Widget.GameLink.Button"
        android:text="הוסף משחק"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/games_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginTop="@dimen/margin_small"/>

    <Button
        android:id="@+id/back_to_main_button"
        style="@style/Widget.GameLink.Button"
        android:text="חזור למסך הראשי"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"/>

</LinearLayout>
